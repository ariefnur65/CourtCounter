<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="32dp"
    tools:context="id.co.blogspot.blogmozink.courtcounter.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/teamA"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="56sp"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/TeamA"
                      />
                <Button
                    android:onClick="TeamA3"
                    android:layout_marginTop="24dp"
                    android:id="@+id/TeamATiga"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/p3"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/colorPrimary"
                    />

                <Button
                    android:onClick="TeamA2"
                    android:layout_marginTop="8dp"
                    android:id="@+id/TeamADua"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/p2"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/colorPrimary"
                    />

                <Button

                    android:onClick="TeamAF"
                    android:layout_marginTop="8dp"
                    android:id="@+id/TeamAFree"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/free"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@color/colorPrimary"
                    />



            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/teamB"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="56sp"
                    android:fontFamily="sans-serif-light"
                    android:text="0"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/TeamB"
                    />
                <Button

                    android:onClick="TeamB3"
                    android:layout_marginTop="24dp"
                    android:id="@+id/TeamBTiga"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/p3"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/colorPrimary"
                    />

                <Button

                    android:onClick="TeamB2"
                    android:layout_marginTop="8dp"
                    android:id="@+id/TeamBDua"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/p2"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:background="@color/colorPrimary"
                    />

                <Button
                    android:onClick="TeamBF"
                    android:layout_marginTop="8dp"
                    android:id="@+id/TeamBFree"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:text="@string/free"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:background="@color/colorPrimary"
                    />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="71dp" />
    <Button

        android:onClick="Reset"
        android:layout_marginBottom="32dp"
        android:id="@+id/Reset"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="@string/reset"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:background="@color/colorPrimary"
        />



</LinearLayout>
